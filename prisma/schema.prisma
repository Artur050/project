datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  image String?
  title String
  price Float
  category String 
  description String?
  createdAt DateTime @default(now())
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password  String
  role      Role     @default(USER)
  name    String?
  createdAt DateTime @default(now())

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

